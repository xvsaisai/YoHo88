<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <CheckBox
        android:id="@+id/cb_select"
        android:button="@null"
        android:layout_centerVertical="true"
        android:background="@drawable/goouwuche_quanxuan_bg"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/iv_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_select"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_toRightOf="@+id/iv_content"
        android:layout_toLeftOf="@+id/tv_count"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_num_jian"
            android:background="@drawable/goods_add_dialog_jiajian_bshape"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="-" />

        <TextView
            android:id="@+id/tv_add_num"
            android:layout_toRightOf="@+id/tv_num_jian"
            android:layout_toLeftOf="@+id/tv_num_jia"
            android:background="@drawable/goods_add_dialog_jiajian_bshape"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv_num_jia"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/goods_add_dialog_jiajian_bshape"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="+" />

        <TextView
            android:id="@+id/tv_select"
            android:gravity="center_vertical"
            android:background="@drawable/goods_add_dialog_jiajian_bshape"
            android:layout_below="@+id/tv_num_jian"
            android:drawableRight="@drawable/xia"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="颜色：黑色 尺码：M/L" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_below="@+id/tv_select"
            android:layout_marginTop="10dp"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥52.00" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1" />

</RelativeLayout>