<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/main_toolbar_color"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/iv_back" />

        <ImageView
            android:id="@+id/iv_zan"
            android:layout_toLeftOf="@+id/tv_count"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/zan" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_toLeftOf="@+id/iv_like"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="0"
            android:background="#ffffff"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_toLeftOf="@+id/iv_pinglun"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/guanzhu_like" />

        <ImageView
            android:id="@+id/iv_pinglun"
            android:layout_toLeftOf="@+id/iv_fenxiang"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pinglun" />

        <ImageView
            android:id="@+id/iv_fenxiang"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fenxiang" />
    </RelativeLayout>

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</LinearLayout>