<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/cb_select"
        android:button="@null"
        android:layout_centerVertical="true"
        android:background="@drawable/goouwuche_quanxuan_bg"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/iv_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_select"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_toRightOf="@+id/iv_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="dsasfas" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1" />

        <TextView
            android:id="@+id/tv_yanse"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色：黑色" />

        <TextView
            android:id="@+id/tv_chima"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/tv_yanse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尺码：M/L" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_yanse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="￥82.00" />
    </RelativeLayout>

</RelativeLayout>