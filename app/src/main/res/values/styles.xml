<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="main_navigationbar_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/home_navigationbar_item_text_bg_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="fenlei_pinlei_tab_radiobutton">
        <item name="android:textColor">@color/home_navigationbar_item_text_bg_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <declare-styleable name="MyRadioButton">
        <attr name="redDotRedus" format="dimension"/>
        <attr name="redDotTextSize" format="dimension"/>
        <attr name="redDotTextNum" format="integer"/>
        <attr name="redDotBGColor" format="color"/>
        <attr name="redDotTextColor" format="color"/>
    </declare-styleable>

    <style name="pop">
        <item name="android:windowEnterAnimation">@anim/pop_tran_in</item>
        <item name="android:windowExitAnimation">@anim/pop_tran_out</item>
    </style>

    <style name="add_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/add_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/add_dialog_out</item>
    </style>

    <style name="dialog_add_gouwuche_radio_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/goods_add_gouwuche_bg_select</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
